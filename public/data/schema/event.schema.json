{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "event.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "cityId", "title", "month", "days", "category", "importance"],
  "properties": {
    "id": { "type": "string", "pattern": "^event:[a-z0-9-]+:[a-z0-9-]+$" },
    "cityId": { "type": "string" },
    "title": { "type": "string" },
    "month": {
      "type": "string",
      "enum": [
        "january",
        "february",
        "march",
        "april",
        "may",
        "june",
        "july",
        "august",
        "september",
        "october",
        "november",
        "december"
      ]
    },
    "days": { "type": "array", "items": { "type": "integer", "minimum": 1, "maximum": 31 } },
    "importance": { "type": "integer", "minimum": 1, "maximum": 3 },
    "category": { "type": "string", "enum": ["festival", "parade", "sports", "culture", "food", "music", "market", "other"] },
    "neighborhoodId": { "type": "string" },
    "coordinates": {
      "type": "object",
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lng": { "type": "number", "minimum": -180, "maximum": 180 }
      },
      "additionalProperties": false
    },
    "description": { "type": "string" },
    "officialUrl": { "type": "string", "format": "uri" }
  }
}


