{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "seasonal_activities.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["cityId"],
  "properties": {
    "cityId": { "type": "string" },
    "spring": { "$ref": "#/$defs/activityList" },
    "summer": { "$ref": "#/$defs/activityList" },
    "autumn": { "$ref": "#/$defs/activityList" },
    "winter": { "$ref": "#/$defs/activityList" }
  },
  "$defs": {
    "activityList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "summary"],
        "properties": {
          "id": { "type": "string", "pattern": "^activity:[a-z0-9-]+:[a-z0-9-]+$" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "bestMonths": { "type": "array", "items": { "type": "string" } },
          "poiIds": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}


