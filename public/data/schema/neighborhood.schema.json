{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "neighborhood.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "cityId", "name", "summary"],
  "properties": {
    "id": { "type": "string", "pattern": "^neighborhood:[a-z0-9-]+:[a-z0-9-]+$" },
    "cityId": { "type": "string" },
    "name": { "type": "string" },
    "summary": { "type": "string", "minLength": 10 },
    "vibe": { "type": "string" },
    "bestFor": { "type": "array", "items": { "type": "string" } },
    "safety": { "type": "number", "minimum": 1, "maximum": 5 },
    "nightlife": { "type": "number", "minimum": 1, "maximum": 5 },
    "familyFriendly": { "type": "boolean" },
    "highlights": { "type": "array", "items": { "type": "string" } },
    "center": {
      "type": "object",
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lng": { "type": "number", "minimum": -180, "maximum": 180 }
      },
      "additionalProperties": false
    }
  }
}


